<!-- Hot News Carousel -->
<div id="newsCarousel" class="carousel slide mt-10" data-ride="carousel" data-interval="5000">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#newsCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#newsCarousel" data-slide-to="1"></li>
    <li data-target="#newsCarousel" data-slide-to="2"></li>
  </ol>

  <!-- Carousel Inner -->
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="https://picsum.photos/1920/600" class="d-block w-100" alt="Breaking News">
      <div class="carousel-caption">
        <span class="badge badge-danger mb-2">Breaking News</span>
        <h2>Global Tech Summit 2024 Announces Breakthrough in AI Development</h2>
        <p class="d-none d-md-block">Leading tech companies unveil collaborative AI initiative aimed at responsible innovation and development.</p>
        <button class="btn btn-primary mt-2">Read More</button>
      </div>
    </div>
    <div class="carousel-item">
      <img src="https://picsum.photos/1920/600" class="d-block w-100" alt="Sports Update">
      <div class="carousel-caption">
        <span class="badge badge-success mb-2">Sports</span>
        <h2>Historic Victory in World Championship Finals</h2>
        <p class="d-none d-md-block">Underdog team makes history with unprecedented championship win in dramatic final match.</p>
        <button class="btn btn-primary mt-2">Read More</button>
      </div>
    </div>
    <div class="carousel-item">
      <img src="https://picsum.photos/1920/600" class="d-block w-100" alt="Business News">
      <div class="carousel-caption">
        <span class="badge badge-warning mb-2">Business</span>
        <h2>Major Economic Reform Package Announced</h2>
        <p class="d-none d-md-block">Government unveils comprehensive economic package aimed at boosting growth and stability.</p>
        <button class="btn btn-primary mt-2">Read More</button>
      </div>
    </div>
  </div>

  <!-- Controls -->
  <a class="carousel-control-prev" href="#newsCarousel" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#newsCarousel" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
