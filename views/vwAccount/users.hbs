<div class="card shadow-sm mb-4">
  <h5 class="card-header bg-info text-white">
    <i class="bi bi-people me-2"></i> Users List
  </h5>
  <div class="card-body">
    <form method="post">
      <table class="table table-bordered">
        <thead class="table-light">
          <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Role</th>
            <th scope="col">Activation Expiry</th>
            <th scope="col" class="text-center">Actions</th>
          </tr>
        </thead>
        <tbody>
          {{#each this.list}}
          <tr>
            <th scope="row">{{id}}</th>
            <td>{{name}}</td>
            <td>{{email}}</td>
            <td>{{role}}</td>
            <td>{{activation_expiry}}</td>
            <td class="text-center">
              <a href="/admin/users/edit-user?id={{id}}" class="btn btn-sm btn-outline-primary me-2">
                <i class="bi bi-pencil-square"></i> Edit
              </a>
              <button type="submit" class="btn btn-sm btn-outline-danger me-2" formaction="/admin/users/delete?id={{id}}">
                <i class="bi bi-trash"></i> Delete
              </button>
              <button type="submit" class="btn btn-sm btn-outline-success" formaction="/admin/users/extend?id={{id}}">
                <i class="bi bi-arrow-repeat"></i> Extend
              </button>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </form>
  </div>
  <div class="card-footer text-muted text-end">
    Last updated 2 days ago
  </div>
</div>