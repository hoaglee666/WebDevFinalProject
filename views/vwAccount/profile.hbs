{{#section 'js'}}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    {{#if successMessage}}
        Swal.fire({
            title: 'Success!',
            text: '{{successMessage}}',
            icon: 'success',
        });
    {{/if}}

    {{#if errorMessage}}
        Swal.fire({
            title: 'Error!',
            text: '{{errorMessage}}',
            icon: 'error',
        });
    {{/if}}
    $('#frmUpdateProfile').on('submit', function(e){
        e.preventDefault();

        
        // If all checks pass, submit the form
        $('#frmUpdateProfile').off('submit').submit();
    })
</script>
{{/section}}

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <form id="frmUpdateProfile" action="/account/profile" method="post">
        <div class="card shadow-lg border-0">
          <div class="profile-header text-center">
            <div class="avatar-wrapper">
              <div class="avatar-circle mx-auto">
                <i class="bi bi-person-circle"></i>
              </div>
              <div class="avatar-badge">
                <i class="bi bi-pencil-fill"></i>
              </div>
            </div>
            <h3 class="profile-title">Edit Profile</h3>
            <p class="profile-subtitle">Update your personal information below</p>
            <div class="profile-divider">
              <span class="line"></span>
              <i class="bi bi-gear-fill text-primary"></i>
              <span class="line"></span>
            </div>
          </div>

          <div class="card-body p-4">
            <div class="form-group mb-4">
              <label for="txtUsername" class="form-label fw-bold">
                <i class="bi bi-person-badge me-2 text-primary mr-1"></i>
                Username
              </label>
              <input type="text" 
                value="{{this.user.username}}" 
                name="" 
                id="txtUsername" 
                class="form-control form-control-lg" 
                readonly>
            </div>

            <div class="form-group mb-4">
              <label for="txtName" class="form-label fw-bold">
                <i class="bi bi-person me-2 text-primary mr-1"></i>
                Name
              </label>
              <input type="text" 
                value="{{this.user.name}}" 
                name="name" 
                id="txtName" 
                class="form-control form-control-lg" placeholder="Name">
            </div>

            <div class="form-group mb-4">
              <label for="txtEmail" class="form-label fw-bold">
                <i class="bi bi-envelope me-2 text-primary mr-1"></i>
                Email
              </label>
              <input type="text" 
                value="{{this.user.email}}" 
                name="email" 
                id="txtEmail" 
                class="form-control form-control-lg" placeholder="Email">
            </div>
          <div class="form-group mb-4 text-center">
            <label for="request" class="form-label fw-bold">
              <i class="bi bi-arrow-repeat me-2 text-primary mr-1"></i>
              Send Request Extend
            </label>
            <div>
              <input type="checkbox" 
                value="1" 
                name="request" 
                id="request" 
                class="form-check-input">
            </div>
          </div>
          </div>

          <div class="card-footer bg-white border-0 p-4">
            <button type="submit" class="btn btn-primary btn-lg w-100">
              <i class="bi bi-check2 me-2"></i>
              Save Changes
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

