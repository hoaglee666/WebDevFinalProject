<div class="container mt-5">
    <div class="card">
        <div class="card-header bg-primary text-white text-center">
                <h2>{{article.Title}}</h2>
            </div>
            <div class="card-body">
                <p class="card-text">{{article.Abstract}}</p>
                <div class="text-center mb-4">
                    <img class="img-fluid rounded border" 
                         src="/static/imgs/news/{{article.NewsID}}/main_thumbs.jpg" 
                         alt="{{article.Title}}" 
                         style="max-height: 600px; width: 100%; object-fit: cover;">
                </div>
                <p class="card-text">{{{article.Content}}}</p>
                
            </div>
            <div class="card-footer text-center">
                <a href="/articles/download?id={{article.NewsID}}" class="btn btn-success">
                    Download PDF <i class="bi bi-download"></i>
                </a>
            </div>
    </div>
</div>